<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>
<div class="container">
    <div class="card">
            <div class="card-header">
                <h1>Alterar dados do Produto</h1>
            </div>
            <div class="card-body">
            <hr>
            <form action="/produtos/update/<%=produto.id%>" method="POST">
                <label>• Nome do produto:</label>
                <input type="text" name="nome" class="form-control" value="<%= produto.nome %>" required>
                <label>• Categoria:</label>
                <input type="text" name="categoria" class="form-control" value="<%= produto.categoria %>" required>
                <label>• Preço:</label>
                <input type="text" name="preco" class="form-control" value="<%= produto.preco %>" required>
                <label>• Quantidade em estoque:</label>
                <input type="text" name="qtd" class="form-control" value="<%= produto.qtd %>" required>
                <input type="hidden" name="id" value="<%=produto.id%>">
                <br>
                <input type="submit" value="Alterar" class="btn btn-outline-warning" onclick="return confirm('Deseja mesmo alterar os dados do Produto: <%=produto.nome%>?')">

            </form>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs')%>
